<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cute"
    tools:context="com.example.irmayantisyam.irma_1202154347_modul6.upload">

    <LinearLayout
        android:padding="16dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:onClick="setfoto"
            android:id="@+id/gambardiupload"
            android:scaleType="centerInside"
            android:src="@drawable/ikon"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="100dp"
            android:layout_height="100dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Browse your photo"
            android:textColor="#ff2b98"
            android:gravity="center_horizontal"
            android:textSize="25dp"/>

        <EditText
            android:id="@+id/bikinposttitle"
            android:singleLine="true"
            android:hint="Title"
            android:textColorHint="#ff2b98"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/bikinpostcaption"
            android:hint="Describe yout photo"
            android:gravity="center_horizontal"
            android:textColorHint="#ff2b98"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <android.support.design.widget.FloatingActionButton
        android:onClick="uploadingambar"
        android:src="@android:drawable/ic_menu_save"
        android:layout_marginBottom="120dp"
        android:layout_gravity="bottom|center"
        android:scaleType="center"
        android:backgroundTint="#ff2b98"
        android:layout_width="60dp"
        android:layout_height="60dp" />
</android.support.design.widget.CoordinatorLayout>
